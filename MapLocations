    df = p.read_json(file).transpose()
    print(df.head())
    for location in location_list:
        location 


save_kenya(test_images_info, locations_kenya, gps_locations)
m.save("footprint.html")
m_test.save('test_locations.html')
m_kenya.save('Kenya.html')
